{
  "name": "quickstart-react",
  "version": "1.0.0",
  "description": "Quick start tutorial for secure phone authentication",
  "type": "module",
  "scripts": {
    "dev": "concurrently --raw \"npm run server:go\" \"npm run dev:react\"",
    "dev:go": "concurrently --raw \"npm run server:go\" \"npm run dev:react\"",
    "dev:node": "concurrently --raw \"npm run server:node\" \"npm run dev:react\"",
    "dev:java": "concurrently --raw \"npm run server:java\" \"npm run dev:react\"",
    "dev:react": "vite",
    "server:go": "go mod download && go run server.go",
    "server:node": "tsx watch server.ts",
    "server:java": "gradle bootRun",
    "server:java:build": "gradle build",
    "server:java:clean": "gradle clean",
    "server:go:build": "go build -o dist/server-go server.go",
    "postinstall": "go mod download 2>/dev/null || echo 'Go not found - you can use npm run dev:node instead'",
    "build": "vite build",
    "build:server": "tsc",
    "build:all": "npm run build && npm run build:server && npm run server:go:build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "@glideidentity/glide-sdk": "^5.2.0",
    "@glideidentity/web-client-sdk": "^4.4.8", 
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.6"
  }
}
