# =============================================================================
# Glide Magical Auth Quickstart - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# The .env file is gitignored and will not be committed.
# =============================================================================

# =============================================================================
# REQUIRED - Glide API Credentials
# =============================================================================
# Get your OAuth2 credentials from the Glide developer portal
GLIDE_CLIENT_ID=
GLIDE_CLIENT_SECRET=

# Frontend origin for CORS (required for device binding cookies)
# Must match the exact origin of your frontend (scheme + host + port)
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# OPTIONAL - Glide API Configuration
# =============================================================================
# Base URL for the Glide API (default: https://api.glideidentity.app)
# GLIDE_API_BASE_URL=

# Enable verbose SDK logging
GLIDE_DEBUG=true

# =============================================================================
# OPTIONAL - Deployment Configuration
# =============================================================================
# Backend API URL â€” only set when deploying frontend separately from backend
# Leave empty for local development (Vite proxy handles routing)
# VITE_API_URL=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
