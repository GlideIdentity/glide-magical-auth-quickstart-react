# Glide API Configuration
# Get your API key from Glide Identity dashboard
GLIDE_API_KEY=your_api_key_here

# Debug Logging Configuration
# Enable debug logging for detailed SDK logs (development only)
# Set to 'true' to enable debug logging in both frontend and backend
GLIDE_DEBUG=true
# Alternatively, set specific log level: silent, error, warn, info, debug
GLIDE_LOG_LEVEL=debug
# Log format options: pretty (colored boxes), json, simple
GLIDE_LOG_FORMAT=pretty

# Vite Environment Variables (must be prefixed with VITE_)
# These are used by the React frontend built with Vite
VITE_GLIDE_DEBUG=true
VITE_GLIDE_LOG_LEVEL=debug

# Server Port
PORT=3001